include README.rst
include LICENSE.txt
include requirements.txt

# Compiled module
include cloudViewer/cpu/*.pyd
include cloudViewer/cuda/*.pyd
include cloudViewer/cpu/*.so
include cloudViewer/cuda/*.so
include cloudViewer/cpu/*.dylib
include cloudViewer/cuda/*.dylib
include cloudViewer/cloudViewer*.so
include cloudViewer/cloudViewer*.dylib
include cloudViewer/*depthengine*
